{% extends "index.view" %}

{% block search %}
    <div class="bg-grey-lighter min-h-screen flex flex-col">
        <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
            <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
                <h1 class="mb-8 text-3xl text-center">Change your credentials</h1>
                <form action="/change" method="post">
                    <input
                            type="text"
                            class="block border border-grey-light w-full p-3 rounded mb-4"
                            name="newEmail"
                            placeholder="New Email"

                    />

                    <input
                            class="block border border-grey-light w-full p-3 rounded mb-4"
                            name="newPassword" id="Password" type="password" placeholder="New Password" onkeyup='passConfirm();'

                    />

                    <input
                            class="block border border-grey-light w-full p-3 rounded mb-4"
                            name="confirmNewPassword" id="Password" type="password" placeholder="Confirm New Password" onkeyup='passConfirm();'
                    />

                    <input
                            class="block border border-grey-light w-full p-3 rounded mb-4"
                            name="password" id="Password" type="password" placeholder="Current Password" onkeyup='passConfirm();'
                            required
                    />
                    <button
                            type="submit"
                            class="w-full text-center py-3 rounded bg-green-300 text-white hover:bg-green-dark focus:outline-none my-1"
                    >
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}